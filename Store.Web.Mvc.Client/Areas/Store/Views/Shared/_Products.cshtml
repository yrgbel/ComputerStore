@model IEnumerable<Store.DomainModel.DTOs.ProductDetailsDto>

<div class="row">
    @foreach (var product in Model)
    {
        
        <div class="col-xs-6 col-sm-4 col-md-3">
            <div class="param_block">
                @if (product.GetDiscountInfoFull != "")
                {
                    <div class="discount">
                        <div class="discount_value">
                            <em>@product.GetDiscountInfoShort</em>
                        </div>
                        <img src="~/Content/images/discount.svg" width=64
                             title="@product.GetDiscountInfoFull"
                             alt="@product.GetDiscountInfoFull"/>
                    </div>
                }
                
                @{ var refProduct = Url.Action("Product", new
                   {
                       controller = "Product", area = "Store", id = product.ProductId
                   });}

                <a href="@refProduct" class="thumbnail">
                    <img src="@product.ProductImageSmallUrl" alt="@product.ProductName"/>
                </a>
                <h3 class="name_product_in_list"><a href="@refProduct">@product.ProductName</a>
                </h3>
            </div>
        </div>
    }
</div>