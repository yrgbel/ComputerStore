<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Computer store</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/custom-css")
    <!-- All JavaScript at the bottom, except this Modernizr build.
    Modernizr enables HTML5 elements & feature detects for optimal performance.
    Create your own custom Modernizr build: www.modernizr.com/download/ -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="bootstrap-overrides">
    <header>
        <nav>
            <div class="container">
                <div class="row">
                    <div class="navbar-header">
                        <button class="navbar-toggle collapsed menu_btn" data-toggle="collapse" data-target="#top_menu">
                            <span class="glyphicon glyphicon-menu-hamburger"></span>
                        </button>
                        <button class="navbar-toggle collapsed cart_btn" data-toggle="collapse" data-target="#top_menu">
                            <div id="cartBlockBeforeMenu">
                                <span>Cart</span><span class="glyphicon glyphicon-shopping-cart cart_icon"><span id="cartcountMin" class="badge progress-bar-danger badge_count_product">@CurrentCart.ItemCountForDisplay</span></span>
                            </div>
                        </button>
                        <a href="/" class="navbar-brand logo">
                            <img src="~/Content/images/logo.png" id="logo" alt="logo">
                        </a>
                    </div>

                    <div class="collapse navbar-collapse navbar-right menu" id="top_menu">
                        <ul id="first-navbar" class="nav navbar-nav navbar-right menu">
                            <li class="nav-divider">
                            <li><a href="#">CONTACT US</a></li>
                            <li class="nav-divider"></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">HELP & SERVICES<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Action</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="#">Another action</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="#">Separated link</a></li>
                                </ul>
                            </li>
                            <li class="nav-divider" />
                            @Html.Partial("_Login")
                            <li class="nav-divider" />
                            <li class="cart_style"><a href="#">
                                CART
                                <span class="glyphicon glyphicon-shopping-cart cart_icon"></span>
                                <span id="cartcount" class="badge progress-bar-danger badge_count_product">@CurrentCart.ItemCountForDisplay</span>
                            </a></li>
                            <li class="nav-divider" />
                        </ul>
                    </div>
                    <div class="search_panel">
                        <form class="navbar-form">
                            <div class="form-group">
                                <input type="text" class="form-control search_box" placeholder="What are you looking for?">
                                <button type="button" class="btn btn-primary search_btn"><span class="glyphicon glyphicon-search"></span></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
<section>
    <div class="container" id="content">
        @RenderBody()
    </div>
</section>
    
<footer>
    <div id="footer">
            <p>&copy; @DateTime.Now.Year - Computer Shop, Inc.</p>
        </div>
</footer>

<!--
When bundling, load in thisequence:
1) shivs and jQuery
2) 3rd party libraries
3) your app libraries
-->

@Scripts.Render(
    "~/bundles/jquery",
    "~/bundles/jsextlibs",
    "~/bundles/app"
    )

@RenderSection("Scripts", required: false)
</body>
</html>
